<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/racetrack">

    <!-- SeekBar for duck progress -->
    <SeekBar
        android:id="@+id/duckSeekBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:max="100"
        android:progress="0"
        android:thumb="@drawable/duck1"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:focusable="false"
        android:clickable="false"
        android:splitTrack="false"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <!-- Duck name -->
    <TextView
        android:id="@+id/duckName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="8dp"
        android:text="Thunder"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/betAmount"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="end|center_vertical"
        android:hint="Bet"
        android:inputType="number"
        android:background="@drawable/bet_input_background"
        android:textColor="#FFFFFF"
        android:textColorHint="#888"
        android:padding="8dp"
        android:layout_marginEnd="16dp"/>
</FrameLayout>