<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/background_login"
    android:gravity="center">

    <!-- Header Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🏇 ĐUA VỊT"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NẠP TIỀN"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="30dp" />

    <!-- Current Balance Display -->
    <TextView
        android:id="@+id/currentBalanceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số dư hiện tại: 0 VND"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:gravity="center"
        android:background="@drawable/edittext_background"
        android:padding="20dp"
        android:layout_marginBottom="30dp" />

    <!-- Money Amount Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <!-- Row 1: 10k and 50k -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/add10k"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="💰 10,000 VND"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                android:textColor="#FFFFFF"
                android:padding="15dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/add50k"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="💰 50,000 VND"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                android:textColor="#FFFFFF"
                android:padding="15dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Row 2: 100k and 500k -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add100k"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="💰 100,000 VND"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                android:textColor="#FFFFFF"
                android:padding="15dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/add500k"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="💰 500,000 VND"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                android:textColor="#FFFFFF"
                android:padding="15dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Info Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💡 Số dư tối đa: 10,000,000 VND\n🎮 Chơi có trách nhiệm!"
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:lineSpacingExtra="4dp" />

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔙 QUAY LẠI"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/button_secondary"
        android:textColor="#FFFFFF"
        android:padding="15dp" />

</LinearLayout>